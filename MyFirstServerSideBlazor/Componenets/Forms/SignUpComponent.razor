@using Blazored.LocalStorage
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.JSInterop
@using MyFirstServerSideBlazor.Authentification
@using MyFirstServerSideBlazor.Authentification.Contracts

@inject IJSRuntime JSRuntime
@inject IUserServise UserServise
@inject IAccessTokenServise TokenServise
@inject ILocalStorageService LocalStorageServise
@inject AuthenticationStateProvider AuthProvider
@inject NavigationManager NavigationManager

<div class="LoginMainContainer ShowTransition">
    <div class="LogoContainer">
        <h1>Sign Up !</h1>
    </div>
    <div class="TextBoxesContainer">
       <input  placeholder="UserName" @bind="@UserName" />
       <input type="password" placeholder="Enter Password" @bind="@Password" />
       <input type="password" placeholder="Repeat Password" @bind="@PasswordRepeat" />
    </div>
    <div class="ButtonsContainer">
        @{
            if((ValidationErrors?.Count() ?? 0) > 0){
                <ul>
                    @{
                        foreach(var error in ValidationErrors)
                        {
                            <li class="BadUsernameWarning">@error</li>
                        }
                    }                
                </ul>
            }
         }        
        <input class="button" id="SignUpButton" @onclick="SignUpAction" type="button" value="Sign Up" />        
    </div>
</div>

<style>

    ul{
        padding-left: 70px;
        margin-top: 40px;
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
    }

    h1{
        margin-top: 30px;
    }

    #SignUpButton{
        background-color: #357faf;
    }

    .BadUsernameWarning{
        color: red;
        font-size: 13px;
        display: block;
        text-align: start;
        min-width: 55%;
    }

    .ButtonsContainer{
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-content: center;
        width: 100% !important;
    }

    .ButtonsContainer input{
        height: 40px;
        width: 100px;
        border: none;
        background: #35af7c;
        border-radius: 10px;
        box-shadow: rgb(0 0 0 / 15%) 1.95px 1.95px 2.6px;
        color: white;
        font-size: 18px;
        outline: 1px solid #227a561c;
    }

    .ButtonsContainer input:hover{
        height: 40px;
        width: 100px;
        border: none;
        background: #47b788;
        border-radius: 10px;
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
        color: white;
        font-size: 18px;
        outline: 1px solid #227a561c;
        transition: 0.4s;
    }

    .ButtonsContainer input:active{
        height: 40px;
        width: 100px;
        border: none;
        background: #398b69;
        border-radius: 10px;
        box-shadow: rgb(0 0 0 / 50%) 1.95px 1.95px 2.6px inset;
        color: white;
        font-size: 18px;
        outline: 1px solid #227a561c;
        transition: 0.4s;
    }

    .LogoContainer{
        display: flex;
        justify-content: center;
        align-content: center;
        width: 100% !important;
    }

    .LogoContainer img{
        height: 150px;
        margin-top: 20px;
    }
    
    .TextBoxesContainer{
        display: flex;
        flex-wrap: wrap;
        margin-top: 40px;
        justify-content: center;
        align-content: center;
        width: 100% !important;
    }

     .TextBoxesContainer input{
        margin: 10px;
        margin-left: 200px;
        margin-right: 200px;
        width: 100% !important;
        outline: 0;
        height: 35px;
        font-size: 18px;
        padding: 10px;
        padding-left: 30px;
        padding-right: 30px;
        border: none;
        border-radius: 10px;
        box-shadow: rgb(0 0 0 / 5%) 0px 6px 24px 0px, rgb(0 0 0 / 8%) 0px 0px 0px 1px, rgb(0 0 0 / 12%) 0px 3px 4px;
    }

    .TextBoxesContainer input:hover{
        margin: 10px;
        margin-left: 200px;
        margin-right: 200px;
        width: 100% !important;
        outline: 0;
        height: 35px;
        font-size: 18px;
        padding: 10px;
        padding-left: 30px;
        padding-right: 30px;
        border: none;
        border-radius: 10px;
        box-shadow: rgb(0 0 0 / 5%) 0px 6px 24px 0px inset, rgb(0 0 0 / 8%) 0px 0px 0px 1px inset, rgb(0 0 0 / 9%) 0px 4px 5px;
        transition: 0.4s;
    }

    .LoginMainContainer.hide{
        width: 1px;
        height: 450px;
        margin: 20px;
        border-radius: 40px;
        margin-top: -150px;
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
        background-color: #fff;
        flex-wrap: wrap;
        transition: 0.4s;
    }

    .LoginMainContainer.hide div img{
        opacity: 0;
        transition: 0.4s;
    }

     .LoginMainContainer.ShowTransition div img{
        opacity: 1;
        transition: 0.4s;
    }
    
    .LoginMainContainer.hide div{
        width: 1px;
        height: 1px;
        display: none;
        transition: 0.4s;
    }
    
    .LoginMainContainer.ShowTransition div{
        width: 100%;
        height: 15px;
        font-size: 13px;
        transition: 0.4s;
        display: flex;
        justify-content: center;
    }
    
    .LoginMainContainer.ShowTransition{
        display: flex;
        width: 700px;
        height: 450px;
        margin: 20px;
        border-radius: 20px;
        margin-top: -150px;
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
        background-color: #efd4f37a;
        flex-wrap: wrap;
        transition: 0.4s;
    }
    
    .LoginMainContainer:hover
    {
        box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;
    }
</style>

